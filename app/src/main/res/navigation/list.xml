<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    app:startDestination="@+id/chatListScreen">

    <fragment
            android:id="@+id/chatListScreen"
            android:name="com.sample.chatapp4.second.ChatListFragment"
            android:label="채팅"
            tools:layout="@layout/fragment_chat_list">
        <action
            android:id="@+id/action_chatListScreen_to_ChatRoomScreen"
            app:destination="@id/ChatRoomScreen" />
    </fragment>
    <fragment
        android:id="@+id/ChatRoomScreen"
        android:name="com.sample.chatapp4.second.ChatRoomFragment"
        android:label="채팅방"
        tools:layout="@layout/fragment_chat_room">
        <deepLink
        android:id="@+id/deepLink"
        app:uri="www.example.com/user/{userName}"
        android:autoVerify="true"/>
        <argument
            android:name="userName"
            app:argType="string"/>
    </fragment>
</navigation>
